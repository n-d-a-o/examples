@page "/signup"
@model SignupModel
@{
	Layout = "_SimpleLayout";
}
<div class="n-page_content">
	<h1>
		<span>Sign up</span>
	</h1>
	<div>
		<form method="post">
			<div class="n-form-item">
				<label asp-for="SignupForm.Name" class="n-label">Name</label>
				<input type="text" asp-for="SignupForm.Name" class="n-input" />
			</div>
			<div class="n-form-message">
				<div asp-validation-summary="All" class="n-validation-summary">
				</div>
			</div>
			<div class="n-form-action">
				<button type="submit" asp-page-handler="Signup" class="n-btn">Sign up</button>
			</div>
			<div class="n-form-action">
				<a asp-page="@Paths.Pages.Signin" asp-route-to="@Model.To" class="n-link">Sign in</a>
			</div>
		</form>
	</div>
</div>
